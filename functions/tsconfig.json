{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types",
      "@types/express",
      "@types/express-serve-static-core"
    ],
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
